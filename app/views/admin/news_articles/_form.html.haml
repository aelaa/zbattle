= bootstrap_form_for [:admin, news] do |f|
  - if news.errors.any?
    #error_explanation
      %h2= "#{pluralize(news.errors.count, "error")} prohibited this admin_battle from being saved:"
      %ul
        - news.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :name, label: 'Имя'
  .field
    = f.text_area :article, label: 'Текст'
  .actions
    = f.submit 'Сохранить'
