!!! 5
%html(lang='en')
  %head
    %meta(charset='utf-8')
    %meta(http-equiv='X-UA-Compatible' content='IE=Edge,chrome=1')
    %meta(name='viewport' content='width=device-width, initial-scale=1.0')
    %title= content_for?(:title) ? yield(:title) : 'Zbattle'
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media:'all'
    = favicon_link_tag 'favicon.ico', rel: 'shortcut icon'
    = javascript_include_tag 'application'
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js'


  %body
    %a(onclick='favoriteScrollLeft()')
      left
    %a(onclick='favoriteScrollRight()')
      right
    .favorite-works
      - favorites.flatten.each_with_index do |url, index|
        .item{style: "background-image: url(#{image_url 'cats/' + url})"}
          %p.name SpeedSculpt #46
          %p.meta Vasya Pupkin - 1 place

    .navbar.navbar-inverse.navbar-static-top
      .container
        %button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-responsive-collapse')
          %span.icon-bar
            %span.icon-bar
              %span.icon-bar
                %a.navbar-brand(href='#') Zbattle
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav
          %li= link_to 'Новости', news_path
          %li= link_to 'Баттлы', battles_path
          %li= link_to 'Стримы', streams_path
        %ul.nav.navbar-nav.navbar-right.login-buttons
          - if current_user
            - if current_admin
              %li= link_to 'Админка', admin_root_path
            %li= link_to 'Привет, ' + current_user.name.to_s, root_path
            %li= link_to 'Выйти', session_path, method: :delete
          - else
            %li= link_to 'Регистрация', new_user_path
            %li= link_to 'Войти', new_session_path


    .container.main
      .row
        .col-lg-12
          = bootstrap_flash
          = yield

    %footer
      %p &copy; Company 2017
